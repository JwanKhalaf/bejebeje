        <i class="fa-solid fa-house text-2xl text-neutral-800"></i>
        Home
      </a>
    </li>

    <li>
      <a href="#" id="contribute-button" class="flex flex-col justify-between items-center text-sm gap-1.5">
        <i class="fa-solid fa-plus text-2xl text-neutral-800"></i>
        Add
      </a>
    </li>

    <li>
      <a asp-controller="Profile" asp-action="Index" class="flex flex-col justify-between items-center text-sm gap-1.5">
        <i class="fa-solid fa-user text-2xl text-neutral-800"></i>
        Profile
      </a>
    </li>
