<script>
  const toggleVisiblityOfActionsPanel = (event) => {
    event.preventDefault();
    const actions_panel = document.querySelector(".actions-panel");
    const contribute_button = event.target;
    actions_panel.classList.toggle("visible");
    contribute_button.classList.toggle("visible");
  }

  const contribute_button = document.getElementById("contribute-button");

  contribute_button.addEventListener("click", toggleVisiblityOfActionsPanel);
</script>
@RenderSection("Scripts", required: false)
</body>
