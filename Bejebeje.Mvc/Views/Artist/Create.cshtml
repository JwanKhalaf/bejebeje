@model Bejebeje.Models.Artist.CreateArtistViewModel

@{
  ViewData["Title"] = "Add a new artist";
  ViewData["Description"] = "Contribute to Kurdish Music and the archiving project by submitting a new artist and their lyrics.";
}

<div class="container-m">
  <div class="breadcrumb-nav">
    <nav>
      <a asp-controller="Artist" asp-action="Create">/ New artist</a>
    </nav>
  </div>

  <div class="form__new-artist">
    <form asp-controller="Artist" asp-action="Create" method="post">
      <div class="form-group">
        <label class="label">First name</label>
        <input asp-for="FirstName" class="form-control" />
      </div>

      <div class="form-group">
        <label class="label">Last name</label>
        <input asp-for="LastName" class="form-control" />
      </div>

      <div class="warning">
        <p>Before adding the new artist, please make sure the artist does not already exist.</p>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Add artist" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
