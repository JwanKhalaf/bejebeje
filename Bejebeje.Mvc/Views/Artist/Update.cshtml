@model Bejebeje.Models.Artist.UpdateArtistViewModel

@{
  ViewData["Title"] = "Update artist";
  ViewData["Description"] = "Update the artist details.";
}

<div class="container-m">
  <div class="breadcrumb-nav">
    <nav>
      <a asp-controller="Artist" asp-action="Create">/ Update artist</a>
    </nav>
  </div>

  <div class="form__new-artist">
    <form asp-controller="Artist" asp-action="Update" method="post">
      <input type="hidden" asp-for="Id"/>
      <div class="form-group">
        <label class="label">First name</label>
        <input asp-for="FirstName" class="form-control"/>
      </div>

      <div class="form-group">
        <label class="label">Last name</label>
        <input asp-for="LastName" class="form-control"/>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update artist"/>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
